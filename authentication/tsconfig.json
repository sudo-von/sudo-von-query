{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "rootDirs": ["src"],
    "skipLibCheck": true,
    "strict": true,
    "target": "es2016",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
